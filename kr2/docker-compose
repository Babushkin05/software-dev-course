version: '3'

services:
  api-gateway:
    build:
      context: ./api-gateway
      dockerfile: Dockerfile
    container_name: api-gateway
    ports:
      - "8080:8080"
    depends_on:
      - storing-service
      - analise-service
    networks:
      - kr2-net

  storing-service:
    build:
      context: ./storing-service
      dockerfile: Dockerfile
    container_name: storing-service
    ports:
      - "50051:50051"
    depends_on:
      - storing-db
    networks:
      - kr2-net

  analise-service:
    build:
      context: ./analise-service
      dockerfile: Dockerfile
    container_name: analise-service
    ports:
      - "50052:50052"
    depends_on:
      - storing-service
    networks:
      - kr2-net

  storing-db:
    image: postgres:15
    container_name: storing-db
    ports:
      - "5432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data
    networks:
      - kr2-net

networks:
  kr2-net:
    driver: bridge

volumes:
  pgdata:
